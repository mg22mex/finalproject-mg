# Autosell.mx - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://autosell_user:autosell_password@localhost:5433/autosell_mx
REDIS_URL=redis://localhost:6379

# =============================================================================
# GOOGLE SERVICES CONFIGURATION
# =============================================================================
# Google Sheets API
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_SHEET_NAME=Table1
GOOGLE_CREDENTIALS_FILE=credentials/google-credentials.json

# Google Drive API
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# FACEBOOK CONFIGURATION
# =============================================================================
# Facebook Graph API
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# Facebook Marketplace
FACEBOOK_MARKETPLACE_ENABLED=true
FACEBOOK_MARKETPLACE_DAILY_REPOST=true

# =============================================================================
# INSTAGRAM CONFIGURATION
# =============================================================================
# Instagram Basic Display API
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_USER_ID=your_instagram_user_id_here

# =============================================================================
# TWITTER CONFIGURATION
# =============================================================================
# Twitter API v2
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# =============================================================================
# WHATSAPP BUSINESS CONFIGURATION
# =============================================================================
# WhatsApp Business API
WHATSAPP_PHONE_NUMBER=your_whatsapp_phone_number_here
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id_here

# =============================================================================
# WEBSITE INTEGRATION
# =============================================================================
# Autosell.mx Website
WEBSITE_API_BASE_URL=https://www.autosell.mx/api/vehicles
WEBSITE_API_KEY=your_website_api_key_here
WEBSITE_WEBHOOK_URL=https://www.autosell.mx/webhook/vehicle-updates

# =============================================================================
# N8N WORKFLOW AUTOMATION
# =============================================================================
# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=autosell123

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://www.autosell.mx

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# App Settings
APP_NAME=Autosell.mx
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIR=uploads

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/autosell.log
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health

# =============================================================================
# BUSINESS LOGIC CONFIGURATION
# =============================================================================
# Vehicle Status Configuration
ARRIVAL_STATUSES=Disponible,FOTOS
DEPARTURE_STATUSES=Apartado,Vendido
TEMPORARY_UNAVAILABLE=AUSENTE

# Automation Configuration
CHECK_INTERVAL_SECONDS=60
DAILY_AUTOMATION_TIME=09:00
FACEBOOK_MARKETPLACE_REPOST_TIME=08:00

# Social Media Configuration
SOCIAL_MEDIA_POSTING_ENABLED=true
SOCIAL_MEDIA_POSTING_DELAY_SECONDS=30
SOCIAL_MEDIA_MAX_POSTS_PER_DAY=50

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Override default settings for development
# CHECK_INTERVAL_SECONDS=30
# LOG_LEVEL=DEBUG
# DEBUG=true

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================
# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=backups

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM
FILE_BACKUP_RETENTION_DAYS=7
